@model IEnumerable<Teacher>
@using PracticeSoftwareApplication.DomainModels
@using PracticeSoftwareApplication.Models

@{
    ViewBag.Title = "Вчителі";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Список вчителів</h2>

<p>
    @Html.ActionLink("Зареєструвати нового", "Create")
</p>

<div>
    <table class="table table-hover">
        <tr>
            <th>Вчитель</th>
            <th>Предмет</th>
            <th>Місце роботи</th>
            <th>Кількість голосів</th>
            <th></th>
        </tr>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@ViewModelHelper.GetFullName(teacher)</td>
                <td>@teacher.Subject.Name</td>
                <td>@teacher.WorkPlace</td>
                <td>@teacher.Votes</td>
                <td>
                    @Html.ActionLink("Редагувати", "Edit", new { id = teacher.Id }) |
                    @Html.ActionLink("Видалити", "Delete", new { id = teacher.Id })
                </td>
            </tr>
        }

    </table>
</div>