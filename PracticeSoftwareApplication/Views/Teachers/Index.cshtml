@model IEnumerable<Teacher>
@using PracticeSoftwareApplication.DomainModels

@{
    ViewBag.Title = "Вчителі";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <table class="table table-hover">
        <tr>
            <th>Name</th>
            <th>Subject</th>
            <th>Work place</th>
            <th>Votes</th>
        </tr>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@GetFullName(teacher)</td>
                <td>@teacher.Subject</td>
                <td>@teacher.WorkPlace</td>
                <td>@teacher.Votes</td>
            </tr>
        }

    </table>
</div>

@{
    string GetFullName(Teacher teacher)
    {
        return string.Join(" ", teacher.LastName, teacher.FirstName, teacher.MiddleName);
    }
}