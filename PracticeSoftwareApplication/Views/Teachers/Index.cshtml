@model IEnumerable<Teacher>
@using PracticeSoftwareApplication.DomainModels
@using PracticeSoftwareApplication.Models

@{
    ViewBag.Title = "Вчителі";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div>
    <table class="table table-hover">
        <tr>
            <th>Name</th>
            <th>Subject</th>
            <th>Work place</th>
            <th>Votes</th>
            <th></th>
        </tr>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@ViewModelHelper.GetFullName(teacher)</td>
                <td>@teacher.Subject.Name</td>
                <td>@teacher.WorkPlace</td>
                <td>@teacher.Votes</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = teacher.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = teacher.Id })
                </td>
            </tr>
        }

    </table>
</div>